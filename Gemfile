source 'https://rubygems.org'
ruby "2.1.2" 

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.1.1'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.3'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'
# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# gem 'therubyracer',  platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'
# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'
# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.0'
# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.0',          group: :doc

# Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/spring
gem 'spring',        group: :development

# Install RSpec and Capybara gems for testing
group :development, :test do
  gem 'rspec-rails'
  gem 'capybara'  
  gem 'factory_girl'
end

# Use Postgres as the database for Active Record
gem 'pg'

# To serve assets properly on Heroku
group :production do
  gem 'rails_12factor'
end

# For Bootstrap framework
gem 'bootstrap-sass', '~> 3.2.0'

# Faker Gem for seeding DB
gem 'faker'

# Gem for User logins
gem 'devise'

# Gem Figaro for secure env variables
gem 'figaro'

# Gem to authorize different users
gem 'pundit'

# Tags gem
gem 'acts-as-taggable-on'

# Forms gem (from https://github.com/plataformatec/simple_form)
gem 'simple_form'

# Nested forms gem
gem "cocoon"

# Paginate gem
gem 'will_paginate', '~> 3.0.5'

# font awesome for vector icons
gem "font-awesome-rails"

# Add Omniauth and Facebook/Twitter Sign Ups
gem 'omniauth'
gem 'omniauth-twitter'
gem 'omniauth-facebook'

# Autocomplete gem
gem 'rails3-jquery-autocomplete'