<h3>My Account</h3>

<div class="row">
  <div class="col-md-4">

    <h4>Change My Display Name</h4>
    <%= form_for(current_user) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter name", autofocus: true %>
      </div>
      <!-- email notifications checkbox -->
      <div class="form-group">
         <%= f.label "Enable email Notifications" %>
         <%= f.check_box :email_followed %>
         <p class="help-block">
          Tick to be notified when new SumPoints are added to Followed Posts.
        </p>
      </div> 
      <!-- Update button 1 -->
      <div class="form-group">
        <%= f.submit "Update", class: 'btn btn-success' %>
      </div>
    <% end %>

