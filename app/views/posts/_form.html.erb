<%= form_for post do |f| %>

  <!-- Error display box -->
  <% if post.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(post.errors.count, "error") %>.</h4>
      <ul>
        <% post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- Error display box END -->
   
  <!-- Sum points section -->
  <%= f.simple_fields_for :sumpoints do |sumpoint| %>
    <%= render 'sumpoint_fields', :f => sumpoint %>
  <% end %>
  <div class="links">
    <%= link_to_add_association 'Click to Add SumPoint', f, :sumpoints %>
  </div>

  <hr>
  <!-- Sumpoint section end -->

  <%= form_group_tag(post.errors[:title]) do %>
    <%= f.label "Title of source" %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter source title" %>
  <% end %>
  
  <%= form_group_tag(post.errors[:url]) do %>
    <%= f.label "Source url" %>
    <%= f.url_field :url, class: 'form-control', placeholder: "Enter source URL" %>
  <% end %>


  
  <div class="form-group">
    <%= f.submit "Submit", class: 'btn btn-success' %>
  </div>
<% end %>