<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :Title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter post title" %>
  </div>
  
  <div class="form-group">
    <%= f.label :url %>
    <%= f.text_field :url, class: 'form-control', placeholder: "Enter source URL" %>
  </div>

  <!-- Select Content Type -->
  <div class="form-group">
    <%= f.radio_button :content_type, 'Article' %> 
    <%= f.label :content_type, 'Article', :value => 'Article' %>

    <%= f.radio_button :content_type, 'Book' %> 
    <%= f.label :content_type, 'Book', :value => 'Book' %>

    <%= f.radio_button :content_type, 'Video' %> 
    <%= f.label :content_type, 'Video', :value => 'Video' %>

    <%= f.radio_button :content_type, 'Audio' %> 
    <%= f.label :content_type, 'Audio', :value => 'Audio' %>
  </div>

  <div class="form-group">
    <%= f.label :sumpoint %>
    <%= f.text_field :url, class: 'form-control', placeholder: "Enter a sumpoint" %>
  </div>  
  
  <!-- SumPoints Area -->
  <div class="form-group">
    <%= f.submit "Submit", class: 'btn btn-success' %>
  </div>
<% end %>


