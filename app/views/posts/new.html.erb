<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :Title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter post title" %>
  </div>
  
  <div class="form-group">
    <%= f.label :url %>
    <%= f.text_field :url, class: 'form-control', placeholder: "Enter source URL" %>
  </div>

  <!-- Select Format Type (1 is Article, 2 is Book, 3 is Video, and 4 is Audio) -->
  <div class="form-group">
    <%= f.radio_button :format_id, 1 %> 
    <%= f.label :Article %>

    <%= f.radio_button :format_id, 2 %> 
    <%= f.label :Book %>

    <%= f.radio_button :format_id, 3 %> 
    <%= f.label :Video %>

    <%= f.radio_button :format_id, 4 %> 
    <%= f.label :Audio %>
  </div>




  <div class="form-group">
    <%= f.label :tag_list, "Tags" %>
    <%= f.text_field :tag_list, class: 'form-control', placeholder: "Enter a tags and separate with comma" %>
  </div>


  <div class="form-group">
    <%= f.label :sumpoint %>
    <%= f.text_field :url, class: 'form-control', placeholder: "Enter a sumpoint" %>
  </div>  
  
  <!-- SumPoints Area -->
  <div class="form-group">
    <%= f.submit "Submit", class: 'btn btn-success' %>
  </div>
<% end %>


