<%= render partial: 'votes/voter', locals: { post: @post } %>
<h1><%= @post.title %></h1>

<% @post.sumpoints.each do |sumpoint| %>
  <p>
    * <%= sumpoint.body %>
  </p>
<% end %>

<% if policy(@post).edit? %>
  <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-success' %>
<% end %>

<% if policy(@post).destroy? %>
  <%= link_to "Delete Post", @post, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?'} %>
<% end %>

<div>
  <h3><%= pluralize(@post.points, 'point') %></h3>
  <small>
    <%= pluralize(@post.up_postvotes, 'up vote') %>, 
    <%= pluralize(@post.down_postvotes, 'down vote') %>
  </small>
</div>