
<h3><%= @post.title %></h3>
<%= render partial: 'followedposts/followpost', locals: { post: @post } %>

<% if policy(@post).edit? %>
  <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-success' %>
<% end %>

<% if policy(@post).destroy? %>
  <%= link_to "Delete Post", @post, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?'} %>
<% end %>
<hr>




<!-- Sumpoints area-->
<div class="col-md-12">
  <% @post.sumpoints.each do |sumpoint| %>
    <div class="panel panel-default">

      <div class="panel-body">

        <blockquote><%= sumpoint.body %></blockquote>

          Posted by <%= sumpoint.user.name %>
      
        <br>
        <%= render partial: 'likes/liker', locals: { post: sumpoint.post, sumpoint: sumpoint } %>
        <small>
          Tags: <%= raw sumpoint.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
        </small>
      </div>

    </div>
  <% end %>
</div>
