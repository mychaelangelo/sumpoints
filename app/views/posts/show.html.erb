<%= render partial: 'followedposts/followpost', locals: { post: @post } %>
<hr>
<%= render partial: 'votes/voter', locals: { post: @post } %>

<div class="panel panel-default">
    
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= @post.title %>
    </h3>
  </div>

  <div class="panel-body">
    <ul>
      <% @post.sumpoints.each do |sumpoint| %>
        <li><%= sumpoint.body %></li>
      <% end %>
    </u>
  </div>

  <!-- Footer for Post -->
  <div class="panel-footer">
    <small>
      <span class="label label-info"><%= pluralize(@post.points, 'Point') %></span> 
      
      <small>
          (<%= pluralize(@post.up_postvotes, 'up vote') %>, 
          <%= pluralize(@post.down_postvotes, 'down vote') %>)
      </small>
      |
      Submitted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.name %> in 
      *** |
      Tags: <%= raw @post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %> |
      <%= link_to pluralize(@post.sumpoints.count,'SumPoint'), @post %>
    </small>
  </div>

</div>

<hr>

<% if policy(@post).edit? %>
  <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-success' %>
<% end %>

<% if policy(@post).destroy? %>
  <%= link_to "Delete Post", @post, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?'} %>
<% end %>


<div>

</div>
