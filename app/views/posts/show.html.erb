<%= render partial: 'votes/voter', locals: { post: @post } %>
<h1><%= @post.title %></h1>

<% @post.sumpoints.each do |sumpoint| %>
  <p>
    * <%= sumpoint.body %>
  </p>
<% end %>

  <!-- Sum points section -->
  <%= f.simple_fields_for :sumpoints do |sumpoint| %>
    <%= render 'sumpoint_fields', :f => sumpoint %>
  <% end %>
  <div class="links">
    <%= link_to_add_association 'Add sumpoint', f, :sumpoints %>
  </div>
  <hr>
  <!-- Sumpoint section end -->

<% if policy(@post).edit? %>
  <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-success' %>
<% end %>

<% if policy(@post).destroy? %>
  <%= link_to "Delete Post", @post, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?'} %>
<% end %>

<div>
  <h4><%= pluralize(@post.points, 'point') %></h4>
  <small>
    <%= pluralize(@post.up_postvotes, 'up vote') %>, 
    <%= pluralize(@post.down_postvotes, 'down vote') %>
  </small>
</div>
<%= render partial: 'followedposts/followpost', locals: { post: @post } %>