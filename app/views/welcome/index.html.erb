<div id="tag_cloud">
  Top 10 Tags:<% tag_cloud Post.tag_counts_on(:tags).order('count desc').limit(10), %w[s m l] do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: "label label-default" %>
  <% end %>
</div>

<hr>

<div class="row">

  <!-- Sumpoints area-->
  <div class="col-md-8">

     
    <% @sumpoints.each do |sumpoint| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <%= sumpoint.body %><br>
          <small>Posted by <%= sumpoint.user.name %></small> via 
          <%= link_to sumpoint.post.title, sumpoint.post %>
          <br>
          <%= render partial: 'likes/liker', locals: { post: sumpoint.post, sumpoint: sumpoint } %>

        </div>

      </div>
    <% end %>
    <%= will_paginate @sumpoints %>
  </div>
  <!-- Sumpoints END -->
  




</div>




