<div id="tag_cloud">
  Popular Tags:<% tag_cloud Sumpoint.tag_counts_on(:tags).order('count desc').limit(15), %w[s m l] do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: "label label-default" %>
  <% end %>
</div>

<hr>


  <!-- Sumpoints area-->
  <div class="col-md-12">
    <%= render partial: 'sumpoints/sumpoints', locals: { sumpoints: @sumpoints } %>
  </div>
  <!-- Sumpoints END -->
  <div class="col-md-12">
    <%= will_paginate @sumpoints %>
  </div>
</div>




